<div class="col-md-12">
  <h3 class="text-center py-2">Books</h3>
</div>
<div class="col-md-12 my-5">

  <form {{action "addBook" on="submit"}} >
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="title">Title</label>
        {{input value=title class="form-control"}}
      </div>
      <div class="form-group col-md-6">
        <label for="author">Author</label>
        {{input value=author class="form-control"}}
      </div>
    </div>
    <div class="form-group">
      <label for="resume">Resume</label>
      {{textarea value=resume class="form-control"}}
    </div>


    <button type="submit" class="btn btn-primary">Add</button>
  </form>
</div>

{{#each model as |bookUnit|}}
  {{book-information book=bookUnit}}
{{/each}}